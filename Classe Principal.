package exercício4;

/**
 *
 * @author Marino
 */
public class Exercício4 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
    Pessoa p = new Pessoa();
    p.setNome("Guilherme");
    p.setEndereco("Rua Angélica, Bairro Jardim São Sebastião");
    p.setTelefone("Telefone Adicionado");
    System.out.println(" O Nome da Pessoa é: " + p.getNome() + " O Endereço da Pessoa é: " + p.getEndereco() + " O Status do Telefone da Pessoa: " + p.getTelefone());
    
    Fornecedor f = new Fornecedor();
    f.setValorCredito(1000);
    f.setValorDivida(100);
    System.out.println(" O Valor do Crédito é: " + f.getValorCredito() + " O Valor da Dívida é: " + f.getValorDivida());
    System.out.println(" O Saldo é: " + f.getobterSaldo());
    
    Empregado e = new Empregado();
    e.setCodigoSetor(123);
    e.setSalarioBase(1000);
    e.setImposto(0.2);
    System.out.println(" O Código do Setor é: " + e.getCodigoSetor() + " O Salário Base é: " + e.getSalarioBase() + " O Imposto em porcentagem é: " + e.getImposto());
    System.out.println(" O Salário do Empregado é: " + e.getcalcularSalario());
    
    Administrador a = new Administrador();
    a.setAjudaDeCusto(1000);
    a.setSalarioBase(800);
    System.out.println(" A Ajuda de Custo é: " + a.getAjudaDeCusto() + " O Salário de um Empregado é: " + a.getSalarioBase());
    System.out.println(" O Salário do Administrador é: " + a.getcalcularSalario());
    
    Operario o = new Operario();
    o.setValorProducao(1000);
    o.setComissao(0.2);
    o.setSalarioBase(800);
    System.out.println(" O Valor da Produção é: " + o.getValorProducao() + " A Comissão é: " + o.getComissao() + " O Salário de um Empregado é: " + o.getSalarioBase());
    System.out.println(" O Salário do Operário é: " + o.calcularSalario());
    
    Vendedor v = new Vendedor();
    v.setValorVendas(1000);
    v.setComissao(0.2);
    v.setSalarioBase(800);
    System.out.println(" O Valor das Vendas é: " + v.getValorVendas() + " O Valor da Comissão é: " + v.getComissao() + " O Salário de um Empregado é: " + v.getSalarioBase());
    System.out.println(" O Salário do Vendedor é: " + v.getcalcularSalario());
    }    
}
